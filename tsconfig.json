{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES5",
        "lib": ["es2015", "dom"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "lib"
    },
    "angularCompilerOptions": {
        "genDir": "compiled"
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "index.d.ts"
    ]
}
